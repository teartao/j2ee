 <radio-group bindchange="selectRecipt">
    <view class="danger">{{todayInfo}}</view>
    <view>下面是今日菜单</view>
    <label class="weui-cell weui-check__label" wx:for="{{menus}}" wx:key="{{item.name}}">
      <view class="weui-cell__hd">
        <radio value="{{index}}"/>{{item.name}} [￥{{item.price}}]
      </view>
    </label>
  </radio-group>
  
  <view class="operations" wx:if="{{menus!=null && menus.length>0}}">
      <button type="primary" class="operation-btn"
      bindtap="submitChoice" >下单</button>
  </view>

  <view class="operations" wx:if="{{orderedList!=null}}">
       已点列表【总价{{totalPrice}}；总人数{{totalAmount}}】
       ====================================
    <label wx:for="{{orderedList}}" wx:for-item="menuItem" wx:key="menuKey">
      <view>{{key}} ￥{{menuItem.price}} [{{menuItem.userList.length}}人] :</view>
      <view wx:for="{{menuItem.userList}}" wx:for-item="user"  wx:key="userKey"
        style="display:inline-block;color:red;" >【{{user}}】</view>
    </label>
  </view>
  <view class="operations" wx:if="{{finalOrderTxt!=null && finalOrderTxt!=''}}">
    <button type="primary" class="operation-btn"
      bindtap="copyOrderResult" >复制下单结果</button>
  </view>