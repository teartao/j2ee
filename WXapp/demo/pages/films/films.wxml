<view class='wrap'>
    <view class='films'>
      <!--标题-->
      <view class='films-title'>
        <view class='films-new'>新片速递</view>
        <view class='films-more'>更多></view>
      </view>
      <!--列表 -->
      <scroll-view class='films-list' scroll-x="true" >
        <view class='films-img' wx:for="{{newFilm}}" wx:key="{{index}}" >
          <navigator><image src="{{item.cover.url}}" class='cover-img'></image></navigator>
          <view class='films-text'>
            <text class='films-text-title'>{{item.title}}</text>
            <view>
              <image src="../../imgs/star-{{ (item.rating.value+0.5)>=star ? 'open':'close' }}.png" 
                   wx:for="{{[2,4,6,8,10]}}" wx:key="{{index}}" wx:for-item="star">
              </image>
              <text class="films-text-comment">{{item.rating.value}}</text> 
            </view>
          </view>
        </view>
      </scroll-view>    
    </view>

